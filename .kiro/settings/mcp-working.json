{
    "mcpServers": {
        "sqlite": {
            "command": "uvx",
            "args": [
                "mcp-server-sqlite",
                "--db-path",
                "./database.db"
            ],
            "env": {
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "disabled": false,
            "autoApprove": [
                "read_query",
                "list_tables",
                "describe_table",
                "append_insight"
            ]
        },
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git"
            ],
            "env": {
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "disabled": false,
            "autoApprove": [
                "git_status",
                "git_log",
                "git_diff"
            ]
        },
        "time": {
            "command": "uvx",
            "args": [
                "mcp-server-time"
            ],
            "env": {
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "disabled": false,
            "autoApprove": [
                "get_current_time",
                "convert_time"
            ]
        },
        "http": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ],
            "env": {
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "disabled": false,
            "autoApprove": [
                "fetch"
            ]
        }
    }
}