{
  "testing_config": {
    "base_url": "http://localhost:5000",
    "timeout": 30,
    "screenshot_on_failure": true,
    "parallel_testing": false,
    "retry_failed_tests": 1
  },
  
  "browsers": {
    "chrome": {
      "enabled": true,
      "driver_path": "auto",
      "options": [
        "--no-sandbox",
        "--disable-dev-shm-usage",
        "--disable-gpu",
        "--disable-blink-features=AutomationControlled"
      ],
      "mobile_emulation": true,
      "versions": ["latest"]
    },
    "firefox": {
      "enabled": true,
      "driver_path": "auto",
      "options": [
        "--no-sandbox"
      ],
      "mobile_emulation": false,
      "versions": ["latest"]
    },
    "edge": {
      "enabled": true,
      "driver_path": "auto",
      "options": [
        "--no-sandbox",
        "--disable-dev-shm-usage"
      ],
      "mobile_emulation": false,
      "versions": ["latest"],
      "platforms": ["windows"]
    },
    "safari": {
      "enabled": false,
      "driver_path": "auto",
      "options": [],
      "mobile_emulation": false,
      "versions": ["latest"],
      "platforms": ["macos"]
    }
  },
  
