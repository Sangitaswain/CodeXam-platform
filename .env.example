# ============================================================================
# CodeXam - Elite Coding Arena Environment Configuration
# ============================================================================
# Copy this file to .env and update the values for your environment
# 
# SECURITY WARNING: Never commit the actual .env file to version control!
# This template provides all available configuration options with defaults.
# ============================================================================

# ============================================================================
# FLASK APPLICATION CONFIGURATION
# ============================================================================
FLASK_ENV=development                    # Options: development, testing, production
SECRET_KEY=your-secret-key-change-in-production  # CRITICAL: Change in production!
DEBUG=True                               # Set to False in production

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000                               # Port for the Flask application
HOST=0.0.0.0                           # Host interface (0.0.0.0 for all interfaces)

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///database.db      # SQLite for development
# DATABASE_URL=postgresql://username:password@localhost/codexam  # PostgreSQL for production
# DATABASE_URL=mysql://username:password@localhost/codexam       # MySQL alternative

# ============================================================================
# CODE EXECUTION ENGINE CONFIGURATION
# ============================================================================
JUDGE_TIMEOUT=5                         # Code execution timeout (seconds)
JUDGE_MEMORY_LIMIT=134217728           # Memory limit (128MB in bytes)

# ============================================================================
# PERFORMANCE MONITORING
# ============================================================================
ENABLE_PERFORMANCE_MONITORING=True     # Enable system performance tracking
PERFORMANCE_LOG_LEVEL=INFO             # Logging level for performance metrics

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================
CACHE_TTL_DEFAULT=300                   # Default cache TTL (5 minutes)
CACHE_TTL_PLATFORM_STATS=300          # Platform statistics cache (5 minutes)
CACHE_TTL_LEADERBOARD=120              # Leaderboard cache (2 minutes)
CACHE_TTL_USER_SUBMISSIONS=60          # User submissions cache (1 minute)
CACHE_TTL_PROBLEMS=600                 # Problems cache (10 minutes)

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
CSRF_ENABLED=True                       # Enable CSRF protection
SESSION_COOKIE_SECURE=False            # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True           # Prevent JavaScript access to cookies
SESSION_COOKIE_SAMESITE=Lax            # CSRF protection via SameSite

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
ADMIN_USERNAME=admin                    # Admin panel username
ADMIN_PASSWORD=change-this-password     # CRITICAL: Change in production!

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com    # Judge0 API endpoint
# JUDGE0_API_KEY=your-judge0-api-key                 # Judge0 API key

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO                          # Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=codexam.log                   # Log file path
LOG_MAX_SIZE=10485760                  # Max log file size (10MB)
LOG_BACKUP_COUNT=5                     # Number of backup log files

# ============================================================================
# ASSET OPTIMIZATION
# ============================================================================
MINIFY_ASSETS=True                      # Enable CSS/JS minification
ENABLE_GZIP=True                       # Enable gzip compression
STATIC_URL_PATH=/static                # Static files URL path

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True                # Enable rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60      # Requests per minute per IP
RATE_LIMIT_BURST=10                    # Burst allowance

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
ENABLE_DEBUG_TOOLBAR=False             # Flask debug toolbar (development only)
ENABLE_PROFILER=False                  # Performance profiler (development only)

# ============================================================================
# PRODUCTION DEPLOYMENT NOTES
# ============================================================================
# For production deployment:
# 1. Set FLASK_ENV=production
# 2. Set DEBUG=False
# 3. Generate a strong SECRET_KEY
# 4. Change ADMIN_PASSWORD
# 5. Set SESSION_COOKIE_SECURE=True (requires HTTPS)
# 6. Use PostgreSQL instead of SQLite
# 7. Configure proper logging and monitoring
# 8. Set up reverse proxy (Nginx/Apache)
# 9. Enable SSL/TLS certificates
# 10. Configure firewall and security groups